<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".debug.WidgetTestActivity">
    <com.alibaba.mnnllm.android.widgets.ProgressPieView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:pie_progress="70"
        app:pie_startAngle="-90"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="getDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getDeviceName"
        tools:ignore="OnClick" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/checkbox_round"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:buttonTint="@null"
        app:buttonTint="@null"
        android:button="@drawable/checkbox_check_background"/>
</LinearLayout>