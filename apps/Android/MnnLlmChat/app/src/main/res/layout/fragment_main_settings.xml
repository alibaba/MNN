<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- General Settings Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="@string/settings_section_general" />

        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsSectionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.alibaba.mnnllm.android.modelsettings.SettingsItemView
                    android:id="@+id/item_stop_download"
                    style="@style/SettingsRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:itemText="@string/stop_download_tasks_when_chat" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <com.alibaba.mnnllm.android.modelsettings.DropDownLineView
                    android:id="@+id/dropdown_download_provider"
                    style="@style/SettingsRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/baseline_arrow_drop_down_24"
                    app:labelText="@string/select_download_provider" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/btn_voice_model_management"
                    style="@style/SettingsRowClickable"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/voice_model_management" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- API Settings Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="@string/api_settings" />

        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsSectionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.alibaba.mnnllm.android.modelsettings.SettingsItemView
                    android:id="@+id/item_enable_api"
                    style="@style/SettingsRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:itemText="@string/enable_api_service" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/btn_reset_api"
                    style="@style/SettingsRowClickable"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/reset_api_config" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="@string/about" />

        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsSectionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_check_update"
                    style="@style/SettingsRowClickable"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/check_for_update" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/SettingsRowLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/mnn_version" />

                    <TextView
                        android:id="@+id/tv_mnn_version"
                        style="@style/SettingsRowValue"
                        tools:text="3.0.0" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_debug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_debug_mode"
                    style="@style/SettingsRowClickable"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/debug_mode"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
