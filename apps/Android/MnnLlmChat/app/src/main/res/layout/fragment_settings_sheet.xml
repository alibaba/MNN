<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <!--    <ImageButton-->
    <!--        android:id="@+id/button_close_sheet"-->
    <!--        android:layout_width="48dp"-->
    <!--        android:layout_height="48dp"-->
    <!--        android:layout_marginTop="8dp"-->
    <!--        android:layout_marginEnd="8dp"-->
    <!--        android:background="?attr/selectableItemBackgroundBorderless"-->
    <!--        android:contentDescription="Close Settings"-->
    <!--        android:src="@drawable/ic_close"-->
    <!--        tools:ignore="MissingConstraints" />-->

    <TextView
        android:id="@+id/sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:text="Model Settings"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <LinearLayout
        android:id="@+id/button_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button"
            android:text="Done" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_bar_layout"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_bottom"
        android:layout_below="@id/sheet_title"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/header_model_config"
                style="@style/SettingsSectionHeader"
                android:text="MODEL CONFIGURATION"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/SettingsSectionGroup"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/SettingsRowContainer"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:id="@+id/label_use_mmap"
                            style="@style/SettingsRowLabel"
                            android:text="Use mmap"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintTop_toTopOf="parent" />
                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_use_mmap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:focusable="false"
                            android:clickable="false"
                            android:background="@null"
                            app:useMaterialThemeColors="true"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:id="@+id/button_clear_cache"
                        style="@style/SettingsRowClickable"
                        android:text="Clear mmap Cache" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/header_sampling_strategy"
                style="@style/SettingsSectionHeader"
                android:text="SAMPLING STRATEGY" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                style="@style/SettingsSectionGroup">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_sampler_type_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Sampler Type">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/menu_sampler_type_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/container_mixed_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            style="@style/SettingsSubLabel"
                            android:text="Configure mixed samplers:" />

                        <include
                            android:id="@+id/row_mixed_top_k"
                            layout="@layout/settings_row_slider_switch" />

                        <include
                            android:id="@+id/row_mixed_tfs_z"
                            layout="@layout/settings_row_slider_switch" />

                        <include
                            android:id="@+id/row_mixed_typical"
                            layout="@layout/settings_row_slider_switch" />

                        <include
                            android:id="@+id/row_mixed_top_p"
                            layout="@layout/settings_row_slider_switch" />

                        <include
                            android:id="@+id/row_mixed_min_p"
                            layout="@layout/settings_row_slider_switch" />

                        <include
                            android:id="@+id/row_mixed_temp"
                            layout="@layout/settings_row_slider_switch" />

                    </LinearLayout>

                    <LinearLayout
                    android:id="@+id/container_penalty_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/row_penalty_penalty"
                        layout="@layout/settings_row_slider" />

                    <include
                        android:id="@+id/row_penalty_ngram_size"
                        layout="@layout/settings_row_slider" />

                    <include
                        android:id="@+id/row_penalty_ngram_factor"
                        layout="@layout/settings_row_slider" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row_penalty_sampler"
                        style="@style/SettingsRowContainerClickable">

                        <TextView
                            style="@style/SettingsRowLabel"
                            android:text="Penalty Sampler"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/chevron_penalty_sampler"
                            style="@style/SettingsRowChevron"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/value_penalty_sampler"
                            style="@style/SettingsRowValue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/chevron_penalty_sampler"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Greedy" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_top_p_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/row_top_p_top_p"
                        layout="@layout/settings_row_slider" />

                </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>