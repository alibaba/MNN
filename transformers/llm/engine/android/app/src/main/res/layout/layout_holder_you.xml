<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginRight="@dimen/spaceLR">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_qwen"
            android:visibility="gone"
            android:layout_marginRight="@dimen/space10"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_you">
            <TextView
                android:id="@+id/tv_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:layout_centerInParent="true"
                android:textColor="@color/armLightGray"
                android:textSize="@dimen/h3"
                android:padding="@dimen/space10"
                android:textAppearance="@style/Light" />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_centerInParent="true"
                android:id="@+id/lottie_loading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_rawRes="@raw/loading_animation"
                app:lottie_autoPlay="true"
                android:visibility="invisible"
                app:lottie_loop="true"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>